<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.EditText">
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/colorCC</item>
        <item name="android:textSize">@dimen/default_textsize</item>
        <item name="android:textColor">@color/color33</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 按扭样式 -->
    <style name="ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/default_textsize16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_maincolor</item>
    </style>
    <style name="ButtonStyle1">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textSize">@dimen/default_textsize16</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/shape_maincolor_kuang</item>
    </style>
    <style name="ButtonStyle_small">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_textsize14</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/shape_maincolor_kuang</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>

    <style name="myRadioButto">
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/default_padding5</item>
        <item name="android:textSize">@dimen/default_textsize14</item>ba
        <item name="android:textColor">@drawable/selector_homecolor</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="text_mainstyle">
        <item name="android:textColor">@color/color33</item>
        <item name="android:textSize">@dimen/default_textsize14</item>
    </style>
    <style name="text_mainstyle12">
        <item name="android:textColor">@color/color99</item>
        <item name="android:textSize">@dimen/default_textsize12</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

</resources>
